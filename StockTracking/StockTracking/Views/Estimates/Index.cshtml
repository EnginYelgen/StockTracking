@model IEnumerable<StockTracking.Models.Estimate>

@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    tr:hover {
        background-color: whitesmoke;
    }
</style>

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="CreateBulky">Create Bulky</a>
</p>
<p>
    <a asp-action="MultipleEdit">Multiple Edit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Period.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvesmentCompany.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Period.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvesmentCompany.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

